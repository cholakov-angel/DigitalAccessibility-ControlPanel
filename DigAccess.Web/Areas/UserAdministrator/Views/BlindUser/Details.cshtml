@using DigAccess.Models.UserAdministrator.BlindUser
@model BlindUserDetailsViewModel
@{
    ViewData["Title"] = "Преглед на незрящ потребител";
}

<div class="d-flex justify-content-start p-2">
    <h2 class="p-2">Преглед на незрящ потребител</h2>
</div>
<form>
    <div>
        <label for="FirstName">Първо име</label>
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        <input readonly asp-for="FirstName" class="form-control" />
    </div>
    <div>
        <label for="MiddleName">Бащино име</label>
        <span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
        <input readonly asp-for="MiddleName" class="form-control" />
    </div>
    <div>
        <label for="LastName">Фамилия</label>
        <span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
        <input readonly asp-for="LastName" class="form-control" />
    </div>
    <div>
        <label for="PersonalId">ЕГН</label>
        <span asp-validation-for="@Model.PersonalId" class="text-danger"></span>
        <input readonly asp-for="PersonalId" class="form-control" />
    </div>
    <div>
        <label for="TELKID">Номер на ТЕЛК</label>
        <input readonly asp-for="TELKID" class="form-control" />
    </div>
    <div>
        <label for="BirthDate">Улица</label>
        <textarea readonly asp-for="Street" class="form-control"></textarea>
    </div>
    <div>
        <label for="BirthDate">Номер на улица</label>
        <textarea readonly asp-for="StreetNumber" class="form-control"></textarea>
    </div>
</form>