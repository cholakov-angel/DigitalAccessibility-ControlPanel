@model ICollection<DigAccess.Models.BlindUser.BlindUserViewModel>
@{
    ViewData["Title"] = "Потребители";
}
<div class="d-flex">
    <div class="p-2 w-100">
        <h2>Потребители</h2>
    </div>
    <div class="p-2 flex-shrink-1">
        <a asp-action="Add"  asp class="btn btn-dark"><h5>+</h5></a>
    </div>
</div>
@{
    if (Model.Count == 0)
    {
        <h4>Няма потребители.</h4>
    }
    else
    {
        <div class="d-flex p-2 gap-3 align-content-start flex-wrap">
            @foreach (var m in Model)
            {
                <div class="card p-2 mb-3" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@(m.FirstName + " " + m.LastName)</h5>
                        <br />
                        <br />
                        <br />
                        <a asp-action="UserPage" asp-route-id="@m.Id" class="btn btn-dark"><h10>...</h10></a>
                    </div>
                </div>
            }
        </div>
    }
}