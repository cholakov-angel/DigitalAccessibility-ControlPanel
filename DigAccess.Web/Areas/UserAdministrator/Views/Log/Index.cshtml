@using DigAccess.Models.UserAdministrator.License
@using DigAccess.Models.UserAdministrator.Log
@model List<LogViewModel>
@{
    ViewData["Title"] = "Грешки";
}
@if (Model.Count == 0)
{
    <h4>Няма грешки за потребителя!</h4>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Тип</th>
                <th>Дата</th>
                <th>Опции</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model)
            {
                <tr>
                    <td>@log.LogType</td>
                    <td>@log.DateTimeOfLog</td>
                    <td>
                        <div class="p-2 flex-shrink-1">
                            <a asp-controller="Log" asp-action="Details" asp-route-id="@log.Id" class="btn btn-dark"><h5>Опции</h5></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}