@model ICollection<DigAccess.Models.Licence.LicenceAllViewModel>
<h2>Лицензи</h2>

@{
    if (Model.Count == 0)
    {
        <h4>Няма потребители.</h4>
    }
    else
    {
        <div class="d-flex p-2 gap-3 align-content-start flex-wrap">
        @foreach (var m in Model)
        {
            <div class="card p-2 mb-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@(m.FirstName + " " + m.LastName)</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">Брой активни лицензи: @m.LicenceNumber</h6>
                    <br/>
                    <a asp-action="UserLicence" asp-route-id="@m.Id" class="btn btn-dark"><h10>...</h10></a>
                </div>
            </div>
        }
        </div>
    }
}