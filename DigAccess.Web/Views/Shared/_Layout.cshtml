<!DOCTYPE html>
<html lang="en">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - DigAccess.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/DigAccess.Web.styles.css" asp-append-version="true"/>
</head>
<body>

    <div class="row ">
    @if (User.Identity.IsAuthenticated == true)
    {
            <div class="col-sm-3 col-lg-2 min-vh-100 border-end box-shadow mb-3">
            <div class="col-12">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <div class="text-center">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index"><h4>Дигитална достъпност</h4></a>
                        </div>
                    </li>
                    <hr/>
                    <li class="nav-item">
                        <div class="d-flex flex-row p-2">
                                <img class="p-2" src="~/img/house-door.svg" />
                            <a class="nav-link icon-link text-dark" asp-controller="Home" asp-action="Index">Начало</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="d-flex flex-row p-2">
                                <img class="p-2" src="~/img/person.svg" />
                            <a class="nav-link text-dark" asp-area="UserAdministrator" asp-controller="BlindUser" asp-action="Index">Потребители</a>
                        </div>
                    </li>
                        <li class="nav-item">
                            <div class="d-flex flex-row p-2">
                                <img class="p-2" src="~/img/lock.svg" />
                                <a class="nav-link text-dark" asp-area="UserAdministrator" asp-controller="Licence" asp-action="Index">Лицензи</a>
                            </div>
                        </li>
                    <li class="nav-item">
                        <div class="d-flex flex-row p-2">
                                <img class="p-2" src="~/img/house-door.svg" />
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    }
    <div class="col-sm-9 col-lg-10">
        <div class="row">
            <partial name="_LoginPartial"/>
        </div>
        <div class="row">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
</div>

